<% layout("/layouts/bolierplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
<h3> Create new listing</h3>

    <form action="/listings" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title">Title</label>
            <input type="text" name="listing[title]" placeholder="title" class="form-control" required>
            <div class="valid-feedback">
                this is correct.
            </div>
        
            <div class="invalid-feedback">
            Please enter a title.
        </div>
      
        <div class="mb-3">
            <label for="description">Description</label>
            <textarea name="listing[description]" placeholder="description" class="form-control" ></textarea>
           <div class="invalid-feedback">
                Please enter a description.
        </div>
        </div>

        <div class="mb-3">
            <label for="image">Image</label>
            <input type="text" name="listing[image]" placeholder="enter imag url link" class="form-control">
        </div>

        <div class="mb-3">
            <label for="price">Price</label>
            <input  name="listing[price]" placeholder="price" class="form-control" required>
            <div class="invalid-feedback">
                Please enter a valid price.
            </div>
       
        </div>
         <div class="row ">
            <div class="mb-3 col-md-4">
                <label for="location">Location</label>
                <input type="text" name="listing[location]" placeholder="location" class="form-control" required>
                <div class="invalid-feedback">
                    location should be valid
                </div>
            </div>
    
    
            <div class="mb-3 col-md-8">
                <label for="country ">Country</label>
                <input type="text" name="listing[country]" placeholder="country" class="form-control" required>
           
                <div class="invalid-feedback">
                    Please enter a contry name.
                </div>
            </div>

         </div>
        <br> <br>
        
    
    
    <button class="add-btn col-md-12   ">submit</button>
    <br>
    <br>
    <br>

    
    </form>

    
</div>
</div>