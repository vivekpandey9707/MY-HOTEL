<% layout("/layouts/bolierplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
     <h1>Listing Details</h1>
    </div>
    <div class="card col-6 offset-2">
        <img src="<%= listing.image %>" alt="listing_image" class="show-image"/>
        <div class="card-body">
            <p class="card-text">
              <b>Title</b>:  <b><%= listing.title %></b> <br/> 
                <%= listing.description %><br/> 
                &#8377;<%= listing.price.toLocaleString("en-IN") %><br/>
                <%= listing.location %><br/>
                <%= listing.country %>
                
                </p>
                </div>
     <br/>  
     <br/>  
                <div class="btns">
                    <a href="/listings/<%= listing._id %>/edit" 
                        class="edit-btn">Edit</a>
                
              
               
                <form action="/listings/<%= listing._id %>_id %>?_method=DELETE" method="POST">
                    <button  class="btn btn-dark "
                     class="col-2 offset-4">Delete</button>
                    </form>
              </div>
        </div>
        
       
        
    </div>

   

   
    

